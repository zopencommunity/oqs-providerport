###
### Required Environment Variables
###
export ZOPEN_BUILD_LINE="DEV"
export ZOPEN_DEV_TAG="${OQS_PROVIDER_VERSION}"
export ZOPEN_STABLE_URL="https://github.com/open-quantum-safe/oqs-provider.git"
#export ZOPEN_STABLE_TAG="openssl-3.0.0-alpha12-liboqs-0.5.0"
export ZOPEN_STABLE_DEPS="autoconf automake cmake coreutils curl diffutils git grep make openssl perl sed liboqs"
export ZOPEN_DEV_URL="https://github.com/open-quantum-safe/oqs-provider.git"
export ZOPEN_DEV_DEPS="autoconf automake cmake coreutils curl diffutils git grep make openssl perl sed liboqs"
export ZOPEN_CATEGORIES="library"
export ZOPEN_RUNTIME_DEPS=""
