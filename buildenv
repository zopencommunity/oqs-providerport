###
### Build settings (Port type: BUILD, Build system: CMake)
###
### Settings for CMake build system
export ZOPEN_CONFIGURE="cmake"
#export ZOPEN_CONFIGURE_OPTS="-B ../build -DCMAKE_INSTALL_PREFIX=\${ZOPEN_INSTALL_DIR}  -DOPENSSL_ROOT_DIR=\$OPENSSL_HOME -Dliboqs_INCLUDE_DIR=\$LIBOQS_HOME/include -Dliboqs_LIBRARY=\$LIBOQS_HOME/lib/liboqs.so"
export ZOPEN_CONFIGURE_OPTS="-B ../build -DCMAKE_INSTALL_PREFIX=\${ZOPEN_INSTALL_DIR}  -DOPENSSL_ROOT_DIR=\$OPENSSL_HOME -Dliboqs_INCLUDE_DIR=\$LIBOQS_HOME/include"
export ZOPEN_MAKE="make"
export ZOPEN_MAKE_OPTS="-C ../build"
export ZOPEN_EXTRA_CPPFLAGS="-I\${LIBOQS_HOME}/include -fvisibility=default"
export ZOPEN_INSTALL="make"
#export ZOPEN_INSTALL="make"
export ZOPEN_INSTALL_OPTS="install -C ../build"
# ZOPEN_CHECK is often 'ctest' or a custom function.
#export ZOPEN_CHECK="ctest"
#export ZOPEN_CHECK_OPTS="--test-dir ../build --output-on-failure"
zopen_install()
{
set -x
  make install -C ../build
  pwd 
set +x
}
###
### Required user-supplied functions
###

zopen_check_results() {
  dir="$1" 
  pfx="$2" 
  chk="$1/$2_check.log"
  # Add logic to extract the test results here:
  echo "actualFailures:0" 
  echo "totalTests:1" 
  echo "expectedFailures:0"
  echo "expectedTotalTests:1"
}

zopen_get_version() {
  echo "$OQS_PROVIDER_VERSION"
}


